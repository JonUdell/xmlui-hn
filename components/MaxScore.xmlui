<Component name="MaxScore">

    <DataSource id="max" url="http://hn.jonudell.info:8081/query" 
        body='{ { "sql": "select max(cast( score as int)) as max from hn" } }'
        method="POST" />

    <HStack>
        <Card title="max score">
            <Items data="{max}">
                <Text>{$item.max}</Text>
            </Items>
        </Card>
    </HStack>

</Component>

