<Component name="MentionsChart" xmlns:XMLUIExtensions="component-ns">

    <DataSource id="mentions" url="{ window.xmluiHost + '/query' }" body='{ $props.sql }'
        method="POST" />

    <VStack>
        <H1>{$props.title}</H1>

        <Card padding="20px" width="600px" height="300px">
           <XMLUIExtensions:DonutChart
            data="{mentions}"
            dataKey="mentions" nameKey="name"
            showLabel="true"
         />
        </Card>

    </VStack>

</Component>