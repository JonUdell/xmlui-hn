<Component name="MentionsChart" xmlns:XMLUIExtensions="component-ns">

    <DataSource id="mentions" url="{ window.xmluiHost + '/query' }" body='{ $props.sql }' method="POST" />

    <VStack>
        <H1>{$props.title}</H1>

        <Card width="400px" height="300px">
            <XMLUIExtensions:DonutChart data="{mentions.value}" dataKey="mentions" nameKey="name" showLabel="true" />
        </Card>

    </VStack>

</Component>