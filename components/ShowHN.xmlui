<Component name="ShowHN">

    <DataSource id="count" url="http://hn.jonudell.info:8081/query" 
        body='{ { "sql": "select count(*) as count from hn where title like &apos;%Ask HN%&apos;" } }'
        method="POST" />

    <HStack>
        <Card title="show hn">
            <Items data="{count}">
                <Text>{$item.count}</Text>
            </Items>
        </Card>
    </HStack>

</Component>